<%- include('partials/header') -%>

<div class="flex items-center justify-center">
  <div class="bg-gray-100 w-1/3 mt-10 rounded-lg">
    <div class="flex items-center justify-center pt-10 flex-col">
      <img src="<%= user.imageUrl %> " class="rounded-full w-32" />

      <h1 class="text-gray-800 font-semibold text-xl mt-5"><%= user.name %></h1>
      <h1 class="text-gray-800 font-semibold text-sm mt-5">About</h1>
      <h1 class="text-gray-500 text-sm p-1 text-center"><%= user.bio %></h1>
      <h1 class="text-gray-800 font-semibold pb-10 text-sm mt-5">
        Age <span><%= user.age %> </span>
      </h1>
      <!-- component -->
      <a
        id="open-btn"
        
        class="bg-red-600 hover:bg-red-700 text-white text-sm px-4 py-2 border rounded-full"
      >
        Edit profile
      </a>
    </div>
    <div class="flex justify-between p-4"></div>
    <div class="flex items-center justify-center mt-3 mb-6 flex-col"></div>
  </div>
</div>

<!--modal content-->
<div
  class="fixed hidden inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full"
  id="my-modal"
>
  <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3 text-center">
      <div class="mt-2 px-7 py-3"></div>

      <form
        action="/edit/updateProfile?_method=PUT"
        class="flex flex-col space-y-4"
        method="POST"
        enctype="multipart/form-data"
      >
        <div>
          <label for="Age">Age</label>

          <input
            name="age"
            type="number"
            placeholder="Age"
            class="mt-2 w-full rounded-md px-4 py-2 outline-none ring-1 ring-gray-300 focus:ring-2 focus:ring-teal-300"
          />
        </div>
        <div>
          <label for="name">Name</label>

          <input
            name="name"
            type="text"
            placeholder="name"
            class="mt-2 w-full rounded-md px-4 py-2 outline-none ring-1 ring-gray-300 focus:ring-2 focus:ring-teal-300"
          />
        </div>
        <div>
          <label for="Location">Location</label>

          <input
            name="location"
            type="text"
            placeholder="Location"
            class="mt-2 w-full rounded-md px-4 py-2 outline-none ring-1 ring-gray-300 focus:ring-2 focus:ring-teal-300"
          />
        </div>
        <div>
          <label for="Bio">Bio</label>

          <textarea
            name="bio"
            id=""
            cols="30"
            rows="4"
            type="text"
            placeholder="bio goes here"
            class="mt-2 w-full rounded-md px-4 py-2 outline-none ring-1 ring-gray-300 focus:ring-2 focus:ring-teal-300"
          ></textarea>
        </div>
        <div>
          <label for="ProfilePic">Upload profile picture</label>
          <input
            name="file"
            type="file"
            placeholder="Age"
            class="form-control mt-2 w-full rounded-md px-4 py-2 outline-none ring-1 ring-gray-300 focus:ring-2 focus:ring-teal-300"
          />
        </div>
        <button
          type="submit"
          id="ok-btn"
          class="inline-block w-56 self-center rounded-md bg-green-500 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-300"
        >
          Save!
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  let modal = document.getElementById('my-modal');

  let btn = document.getElementById('open-btn');

  let button = document.getElementById('ok-btn');

  btn.onclick = function () {
    modal.style.display = 'block';
  };
  // We want the modal to close when the OK button is clicked
  button.onclick = function () {
    modal.style.display = 'none';
  };

  window.onclick = function (event) {
    if (event.target == modal) {
      modal.style.display = 'none';
    }
  };
</script>
